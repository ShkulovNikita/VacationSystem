@model RequestViewModel;

@using VacationSystem.ViewModels;
@using VacationSystem.Classes.Helpers;

@{
    Layout = "_Common";

    ViewData["Title"] = "Заявка на перенос отпуска";
}

<div class="container">
    <div class="row">
        <div class="col-7">
            <h3>Заявка на перенос отпуска</h3>
            <hr />
            <form method="post">
                <h4>Выберите руководителя</h4>
                <select name="headId">
                    @foreach(Employee head in @Model.Heads)
                    {
                        <option value="@head.Id">@EmployeeHelper.GetFullName(head)</option>
                    }
                </select>
                <h4>Текст сообщения</h4>
                <textarea name="message" maxlength="200"></textarea>
                <input type="hidden" name="empId" value="@Model.Employee.Id" />
                <input type="hidden" name="vacationId" value="@Model.VacationId" />
                <input type="submit" class="btn btn-primary" value="Отправить"/>
            </form>
        </div>
    </div>
</div>
