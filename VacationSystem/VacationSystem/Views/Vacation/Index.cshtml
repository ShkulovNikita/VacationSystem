@model VacationIndexViewModel

@using VacationSystem.ViewModels;
@using VacationSystem.Classes.Helpers;
@using System.Linq;
@using System.Collections.Generic;

@{
    Layout = "_Common";

    ViewData["Title"] = "Отпуска: " + EmployeeHelper.GetFullName(@Model.Employee);
}

<div class="container">
    <div class="row">
        <div class="col-10">
            <form>
                <input type="hidden" name="empId" value="@Model.Employee.Id" />
                <label>Тип отпусков</label>
                @if (@Model.CurrentType == null)
                {
                    <input name="type" type="radio" value="wished" /><span>Запланированные</span>
                    <input name="type" type="radio" value="set" /><span>Утвержденные</span>
                }
                else if (@Model.CurrentType == "set")
                {
                    <input name="type" type="radio" value="wished" /><span>Запланированные</span>
                    <input name="type" type="radio" value="set" checked="checked"/><span>Утвержденные</span>
                }
                else
                {
                    <input name="type" type="radio" value="wished" checked="checked"/><span>Запланированные</span>
                    <input name="type" type="radio" value="set" /><span>Утвержденные</span>
                }
                <label>Год</label>
                <select id="vacation-year" name="year">
                    <option value="0">----</option>
                    @foreach(int year in @Model.Years)
                    {
                        if (@Model.CurrentYear == year)
                        {
                            <option value="@year" selected>@year</option>
                        }
                        else
                        {
                            <option value="@year">@year</option>
                        }
                    }
                </select>
                <input type="submit" class="btn btn-primary" value="Применить" />
            </form>
            <h5>Количество дней для данного года: @Model.AvailableDays</h5>
            @if (@Model.AvailableDays > 0)
            {
                <a id="add-vacation" asp-controller="Vacation" asp-action="AddVacation" asp-route-empId="@Model.Employee.Id" asp-route-year="@(Model.CurrentYear + 1)" class="btn btn-primary">Добавить</a>
            }
            else
            {
                <a href="#" class="btn btn-secondary" role="button" aria-disabled="true">Добавить</a>
            }
            @if(@Model.Vacations.Count > 0)
            {
                <h3>Список отпусков</h3>
            }
            @{
                List<int> ids = Model.Vacations.Select(v => v.Id).Distinct().ToList();
                foreach (int id in ids)
                {
                    <div class="vacation-item">
                    @foreach(VacationViewModel vacation in Model.Vacations.Where(v => v.Id == id).ToList())
                    {
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    @vacation.StartDate.ToString("yyyy-MM-dd") - @vacation.EndDate.ToString("yyyy-MM-dd") (@vacation.Days дней)
                                </h5>
                                <div class="card-text">
                                    @vacation.Status
                                </div>
                            </div>
                        </div>
                    }
                    @{
                        VacationViewModel vac = @Model.Vacations.FirstOrDefault(v => v.Id == id);
                        if (vac.Type == "wished")
                        {
                            <a asp-controller="Vacation" asp-action="EditWishedVacation" asp-route-empId="@vac.EmpId" asp-route-vacationId="@vac.Id" asp-route-year="@vac.Year" class="btn btn-primary">Изменить</a>
                            <a asp-controller="Vacation" asp-action="DeleteWishedVacation" asp-route-vacationId="@vac.Id" class="btn btn-danger">Удалить</a>
                        }
                        else
                        {
                            <a asp-controller="Vacation" asp-action="Interrupt" asp-route-vacationId="@vac.Id" class="btn btn-primary">Прервать</a>
                            <a asp-controller="Vacation" asp-action="Cancel" asp-route-vacationId="@vac.Id" class="btn btn-danger">Отменить</a>
                            <a asp-controller="Vacation" asp-action="Move" asp-route-groupId="@vac.Id" asp-route-type="@vac.Type" class="btn btn-primary">Перенести</a>
                            <a asp-controller="Vacation" asp-action="Split" asp-route-groupId="@vac.Id" asp-route-type="@vac.Type" class="btn btn-primary">Разделить</a>
                        }
                    }
                    </div>
                }
            }
        </div>
    </div>
</div>

@section scripts {
<script type="text/javascript">
</script>
}