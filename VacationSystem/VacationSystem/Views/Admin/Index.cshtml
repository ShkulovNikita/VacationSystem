@using VacationSystem.HtmlHelpers;

@{
    ViewData["Title"] = "Панель администратора";

    string error = null;
    if (TempData["Error"] != null)
        error = TempData["Error"].ToString();
}

<div id="profile" class="container">
    <div class="row">
        @Html.CheckError(error)
        <div id="profile-background" class="content-background">
            <h3>Панель администратора</h3>
            <a asp-controller="Admin" asp-action="Departments" class="btn btn-primary btn-lg menu-button">Список подразделений</a>
            <a asp-controller="Admin" asp-action="Employees" class="btn btn-primary btn-lg menu-button">Список сотрудников</a>
        </div>
    </div>
</div>