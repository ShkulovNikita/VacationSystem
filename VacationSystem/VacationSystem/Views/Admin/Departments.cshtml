@model List<Department>
@using VacationSystem.Models
@using VacationSystem.HtmlHelpers

@{
    ViewData["Title"] = "Список подразделений";

    string error = null;
    if (TempData["Error"] != null)
        error = TempData["Error"].ToString();
    string message = null;
    if (TempData["Message"] != null)
        message = TempData["Message"].ToString();
}

<div class="container">
    <div class="row">
        @Html.CheckError(error)
        @Html.CheckMessage(message)
        <form>
            <input type="text" name="query" />
            <input type="submit" class="btn btn-primary" value="Поиск" />
        </form>
        <div class="col-10">
            @foreach (Department dep in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            @dep.Name
                        </h5>
                        <a href="~/Admin/Department/@dep.Id" class="btn btn-primary">Просмотр подразделения</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>