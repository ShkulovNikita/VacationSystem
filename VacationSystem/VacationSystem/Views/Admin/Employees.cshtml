@model List<Employee>
@using VacationSystem.Models

<div class="container">
    <div class="row">
        <div class="col-10">
            @foreach (Employee emp in @Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            @emp.LastName @emp.FirstName @emp.MiddleName
                        </h5>
                        <a href="~/Admin/Employee/@emp.Id" class="btn btn-primary">Просмотр сотрудника</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>