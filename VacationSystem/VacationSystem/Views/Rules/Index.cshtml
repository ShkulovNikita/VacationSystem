@model List<RuleViewModel>

@using VacationSystem.ViewModels;

@{
    Layout = "_Common";

    ViewData["Title"] = "Список правил выбора отпусков";

    List<Department> departments = ViewBag.departments;
}

<div class="container">
    <div class="row">
        <div class="col-10">
            <form>
                <label for="depId">Подразделение</label>
                <select name="depId">
                    @foreach(Department dep in departments)
                    {
                        <option value="@dep.Id">@dep.Name</option>
                    }
                </select>
                <input type="submit" class="btn btn-primary" value="Применить" />
            </form>
            <a asp-controller="Rules" asp-action="AddEmpRule" class="btn btn-primary">Добавить правило для сотрудников</a>
            <a asp-controller="Rules" asp-action="AddPosRule" class="btn btn-primary">Добавить правило для должностей</a>
            <a asp-controller="Rules" asp-action="AddGroupRule" class="btn btn-primary">Добавить правило для групп</a>
            @if(@Model.Count > 0)
            {
                <h3>Правила выбора отпусков</h3>
            }
            @foreach(var rule in @Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            @rule.SystemDescription
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            @rule.Department.Name
                        </h6>
                        <p class="card-text">
                            @rule.Description
                        </p>
                        @if (rule.RuleType == "Emp")
                        {
                            <a asp-controller="Rules" asp-action="ViewEmpRule" asp-route-ruleId="@rule.Id" class="btn btn-primary">Просмотр</a>
                            <a asp-controller="Rules" asp-action="EditEmpRule" asp-route-ruleId="@rule.Id" class="btn btn-primary">Редактировать</a>
                            <a asp-controller="Rules" asp-action="DeleteEmpRule" asp-route-ruleId="@rule.Id" class="btn btn-danger">Удалить</a>
                        }
                        else if (rule.RuleType == "Pos")
                        {
                            <a asp-controller="Rules" asp-action="ViewPosRule" asp-route-ruleId="@rule.Id" class="btn btn-primary">Просмотр</a>
                            <a asp-controller="Rules" asp-action="EditPosRule" asp-route-ruleId="@rule.Id" class="btn btn-primary">Редактировать</a>
                            <a asp-controller="Rules" asp-action="DeletePosRule" asp-route-ruleId="@rule.Id" class="btn btn-danger">Удалить</a>
                        }
                        else
                        {
                            <a asp-controller="Rules" asp-action="ViewGroupRule" asp-route-ruleId="@rule.Id" class="btn btn-primary">Просмотр</a>
                            <a asp-controller="Rules" asp-action="EditGroupRule" asp-route-ruleId="@rule.Id" class="btn btn-primary">Редактировать</a>
                            <a asp-controller="Rules" asp-action="DeleteGroupRule" asp-route-ruleId="@rule.Id" class="btn btn-danger">Удалить</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>