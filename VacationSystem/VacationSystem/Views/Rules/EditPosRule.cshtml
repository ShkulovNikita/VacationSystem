@model PosRuleViewModel

@using VacationSystem.ViewModels;

@{
    Layout = "_Common";

    ViewData["Title"] = "Редактирование правила для должности";
}

<div class="container">
    <div class="row">
        <div class="col-7">
            <form method="post">
                <h3>Описание правила:</h3>
                <textarea name="description" maxlength="100">@Model.Rule.Description</textarea>
                <h3>Количество сотрудников</h3>
                <input type="number" name="number" value="@Model.Rule.PeopleNumber" />
                <input type="submit" class="btn btn-primary" value="Сохранить" />
            </form>
        </div>
    </div>
</div>