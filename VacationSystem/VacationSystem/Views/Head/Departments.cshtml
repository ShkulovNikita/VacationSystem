@model List<Department>
@using VacationSystem.Models

@{
    Layout = "_Common";

    ViewData["Title"] = "Список подразделений";
}

<div class="container">
    <div class="row">
        <div class="col-10">
            <h3>Список подразделений</h3>
            <hr />
            @foreach (Department dep in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            @dep.Name
                        </h5>
                        <a href="~/Head/Department/@dep.Id" class="btn btn-primary">Просмотр подразделения</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>