@{
    ViewData["Title"] = "Авторизация в системе";
    if ((ViewBag.Error == null) && (TempData["Error"] != null))
    {
        ViewBag.Error = TempData["Error"];
    }
}

<div class="container">
    <div class="row">
        <div id="login-form" class="col-4 ml-auto mr-auto mt-3">
            @{
                if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Error
                    </div>
                }
            }
            <form method="post" action="~/Login/Index">
                <label>Логин</label>
                <input type="text" name="login"/><br/>
                <input type="submit" value="Войти" class="btn-primary"/>
            </form>
        </div>
    </div>
</div>
